
<h1>Task Details</h1>

<div>
<h2><%= @task.title %> </h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>
</div>

<div>
<%= link_to "Delete task #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
</div>

<%= link_to 'back', tasks_path %>
